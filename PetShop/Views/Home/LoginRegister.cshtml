@using PetShop.Models
@model RegisterUser
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
@Scripts.Render("~/bundles/jqueryval")

<script>
    window.onload = function () {
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        let SaveTime = localStorage.getItem('SaveTime');
        if ((CurrentTime - SaveTime) > 10000) {
            localStorage.removeItem('Choice');
        }
        let Choice = localStorage.getItem('Choice');
        if ((Choice == null) || (Choice == "One")) {
            GoOne();
        } else {
            GoTwo();
        }
    };
    function GoTwo() {
        $("#Two").show();
        $("#One").hide();
        localStorage.setItem('Choice', 'Two');
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        localStorage.setItem('SaveTime', CurrentTime);
    }
    function GoOne() {
        $("#One").show();
        $("#Two").hide();
        localStorage.setItem('Choice', 'One');
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        localStorage.setItem('SaveTime', CurrentTime);
    }
    $(document).ready(function () {
        $("input, select, textarea").on("input change", function () {
            $(".alert-danger").fadeOut();
        });
        $("button, input[type=submit]").on("click", function () {
            $(".alert-danger").hide();
        });
    });
</script>

<style>
    body {
        background: linear-gradient(to right, #f9f9f9, #e9eff5);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
    }

    /* 外層容器：讓卡片置中 */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height:90vh;
    }

    /* 卡片樣式 */
    .card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        width: 350px;
        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* 錯誤訊息 */
    .alert-danger {
        background: #ffe6e6;
        color: #d8000c;
        padding: 8px;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
    }

    /* 表單輸入框 */
    .form-control, .P {
        width: 95%;
        padding: 10px;
        margin-bottom: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .form-control:focus, .P:focus {
        border: 1px solid #4a90e2;
        box-shadow: 0 0 6px rgba(74,144,226,0.5);
        outline: none;
    }

    /* 按鈕 */
    .btn-primary {
        background: #4a90e2;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 8px;
        color: white;
        font-size: 16px;
        margin-bottom: 10px;
    }

    .btn-primary:hover {
        background: #357ABD;
    }

    /* 連結按鈕 */
    .btn-link, .N {
        display: block;
        text-align: center;
        color: #4a90e2;
        cursor: pointer;
        text-decoration: none;
        margin-top: 5px;
    }

     .btn-link:hover, .N:hover {
         text-decoration: underline;
     }

    /* 預設隱藏註冊表單 */
    #Two {
        display: none;
    }
</style>

<div class="container">
    <div class="card">
        <!-- 登入 -->
        <div id="One">
            <h2 style="text-align: center; color: #537db7;">登入區</h2>
            @if (TempData["Note"] != null)
            {
                <div class="alert-danger">@TempData["Note"]</div>
            }
            @using (Html.BeginForm("CheckIn", "Home"))
            {
                @Html.TextBox("UserName", null, new { placeholder = "信箱", @class = "form-control" })
                @Html.Password("Password", null, new { placeholder = "密碼", @class = "form-control" })
                <input type="submit" value="登入" class="btn btn-primary" />
                <button class="btn-link" onclick="GoTwo(); return false;">還沒註冊?</button>
                <button type="button" class="btn-link" onclick="window.location.href='/Home/ForgotPassword'">忘記密碼?</button>
            }
            }
        </div>

        <!-- 註冊 -->
        <div id="Two">
            <h2 style="text-align: center; color: #537db7;">註冊區</h2>
            @if (TempData["Note"] != null)
            {
                <div class="alert-danger">@TempData["Note"]</div>
            }
            @using (Html.BeginForm("Register", "Home"))
            {
                @Html.LabelFor(m => m.RegisterAccount)
                @Html.TextBoxFor(m => m.RegisterAccount, new { @class = "P" })
                @Html.ValidationMessageFor(m => m.RegisterAccount, null, new { @Class = "S" })
                <br />

                @Html.LabelFor(m => m.RegisterPassword)
                @Html.PasswordFor(m => m.RegisterPassword, new { @class = "P" })
                @Html.ValidationMessageFor(m => m.RegisterPassword, null, new { @Class = "S" })
                <br />

                @Html.LabelFor(m => m.RegisterRealname)
                @Html.TextBoxFor(m => m.RegisterRealname, new { @class = "P" })
                @Html.ValidationMessageFor(m => m.RegisterRealname, null, new { @Class = "S" })
                <br />

                @Html.LabelFor(m => m.RegisterPhone)
                @Html.TextBoxFor(m => m.RegisterPhone, new { @class = "P" })
                @Html.ValidationMessageFor(m => m.RegisterPhone, null, new { @Class = "S" })
                <br />

                <input type="submit" value="註冊" class="btn btn-primary" />
            }
            <button class="N" onclick="GoOne(); return false;">登入頁面</button>
        </div>
    </div>
</div>
