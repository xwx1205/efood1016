<!-- Select2 樣式與 jQuery -->
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>

<style>
    .page-title {
        text-align: left;
        margin-left: 10px;
    }

    .menu-icon {
        width: 65px;
        height: 65px;
        border-radius: 5px;
        text-align: left;
        justify-content: flex-start;
    }

    .card {
        background: #f0eeec;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 200px;
        display: flex;
        justify-content: center;
    }

    .card-little {
        background: #f0eeec;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        display: flex;
        justify-content: center;
    }

    /* Select2 圖片與樣式調整 */
    .select2-results__option img,
    .select2-selection__rendered img {
        height: 30px;
        width: 30px;
        margin-right: 10px;
        vertical-align: middle;
    }

    .select2-results__option {
        font-size: 18px;
        padding: 10px 15px;
    }

    .select2-selection__rendered {
        font-size: 18px;
        padding-left: 10px;
    }

    .select2-container {
        width: 450px !important;
    }

    .select2-container--default .select2-selection--single {
        height: 50px;
        display: flex;
        align-items: center;
        font-size: 18px;
        box-sizing: border-box;
    }

    /* 按鈕與日期範圍樣式 */
    .week-nav-button {
        padding: 8px 12px;
        margin: 0 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f8f8;
        cursor: pointer;
        font-size: 16px;
    }

        .week-nav-button:hover {
            background-color: #e0e0e0;
        }

    .week-range {
        font-size: 16px;
        margin-left: 10px;
        color: #666;
    }
</style>

<div class="card">
    <img src="~/Image/飲食分析icon.png" alt="飲食分析icon" class="menu-icon">
    <h2 class="page-title"> 飲食分析</h2>
</div>

<div class="card-little">
    <img src="~/Image/營養比例分析icon.png" alt="icon" class="menu-icon">
    <h2 class="page-title">營養比例分析</h2>
</div>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "營養比例分析";

    var weekData = ViewBag.WeekData as Dictionary<string, string>;
    var selectedDate = ViewBag.SelectedDate as string ?? DateTime.Now.ToString("yyyy-MM-dd");
    var labels = ViewBag.Labels as string[];
    var values = ViewBag.Values as decimal[];
    // 計算當前週的起止日期
    var startDate = DateTime.Parse(selectedDate).AddDays(-6).ToString("yyyy/MM/dd");
    var endDate = DateTime.Parse(selectedDate).ToString("yyyy/MM/dd");
}

<!-- 主內容區：圓餅圖 + 七天資料 -->
<div style="display: flex; height: 70vh;">
    <!-- 左半：圓餅圖 -->
    <div style="flex: 1; padding: 30px; display: flex; flex-direction: column; align-items: flex-start;">
        <div style="display: flex; align-items: center; justify-content: center; flex: 1; width: 100%; max-width: calc(50vw - 60px);">
            <canvas id="myPieChart" style="max-width: 100%; max-height: 100%;"></canvas>
        </div>
    </div>

    <!-- 右半：選單與七天紀錄 -->
    <div style="flex: 1; padding: 30px;">
        <!-- 頁面跳轉選單 -->
        <div style="margin-bottom: 20px;">
            <select id="pageSelect" style="width: 450px;">
                <option value="">--- 請選擇頁面 ---</option>
                <option value="@Url.Action("Analysis1Index", "Home")" data-icon="@Url.Content("~/Image/一周飲食統計icon.png")">一周飲食統計</option>
                <option value="@Url.Action("Analysis2Index", "Home")" data-icon="@Url.Content("~/Image/每日熱量趨勢icon.png")">每日熱量趨勢</option>
                <option value="@Url.Action("Analysis3Index", "Home")" data-icon="@Url.Content("~/Image/營養比例分析icon.png")" selected>營養比例分析</option>
            </select>
        </div>

        <!-- 日期選擇與週切換 -->
        <div style="margin-bottom: 20px; display: flex; align-items: center;">
            <button id="prevWeek" class="week-nav-button">上一週</button>
            <label>選擇日期：</label>
            <input type="date" id="analysisDate" value="@selectedDate" style="margin: 0 10px;" />
            <button id="nextWeek" class="week-nav-button">下一週</button>
            <span class="week-range">@startDate - @endDate</span>
        </div>

        <!-- 七天紀錄 -->
        <h3>近七天餐點記錄</h3>
        <ul style="font-size: 18px; list-style: none; padding-left: 0;">
            @if (weekData != null && weekData.Count > 0)
            {
                foreach (var item in weekData)
                {
                    <li>@item.Key ：@item.Value</li>
                }
            }
            else
            {
                <li>尚無資料</li>
            }
        </ul>
    </div>
</div>

<!-- JS區域 -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    $(document).ready(function () {
        // Select2 圖片格式處理
        function formatOption(option) {
            if (!option.id) return option.text;
            var iconUrl = $(option.element).data('icon');
            if (!iconUrl) return option.text;
            return $('<span><img src="' + iconUrl + '" style="height:30px; width:30px; margin-right:10px;">' + option.text + '</span>');
        }

        $('#pageSelect').select2({
            width: 'style',
            templateResult: formatOption,
            templateSelection: formatOption
        });

        // 頁面跳轉
        $('#pageSelect').on('change', function () {
            var url = $(this).val();
            if (url) window.location.href = url;
        });

        // 日期選擇跳轉
        $('#analysisDate').on('change', function () {
            var newDate = $(this).val();
            if (newDate) {
                window.location.href = '/Home/Analysis3Index?selectedDate=' + newDate;
            }
        });

        // 上一週/下一週按鈕
        $('#prevWeek').on('click', function () {
            var currentDate = new Date('@selectedDate');
            currentDate.setDate(currentDate.getDate() - 7);
            var newDate = currentDate.toISOString().split('T')[0];
            window.location.href = '/Home/Analysis3Index?selectedDate=' + newDate;
        });

        $('#nextWeek').on('click', function () {
            var currentDate = new Date('@selectedDate');
            currentDate.setDate(currentDate.getDate() + 7);
            var newDate = currentDate.toISOString().split('T')[0];
            window.location.href = '/Home/Analysis3Index?selectedDate=' + newDate;
        });

        // 圓餅圖資料與繪製
        var labels = @Html.Raw(Json.Encode(labels));
        var values = @Html.Raw(Json.Encode(values));

        var ctx = document.getElementById('myPieChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: values,
                    backgroundColor: ['#ff6384', '#ffcd56', '#36a2eb']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    title: {
                        display: true,
                        text: '本週攝取營養素比例'
                    }
                }
            }
        });
    });
</script>