<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>

<style>
    .page-title {
        text-align: left;
        margin-left: 10px;
    }

    .menu-icon {
        width: 65px;
        height: 65px;
        border-radius: 5px;
        text-align: left;
        justify-content: flex-start;
    }

    .card {
        background: #8e8480;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 200px;
        display: flex;
        justify-content: center;
    }

    .card-little {
        background: #f0eeec;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .select2-results__option img,
    .select2-selection__rendered img {
        height: 30px;
        width: 30px;
        margin-right: 10px;
        vertical-align: middle;
    }

    .select2-results__option {
        font-size: 18px;
        padding: 10px 15px;
    }

    .select2-selection__rendered {
        font-size: 18px;
        padding-left: 10px;
    }

    .select2-container {
        width: 450px !important;
    }

    .select2-container--default .select2-selection--single {
        height: 50px;
        display: flex;
        align-items: center;
        font-size: 18px;
        box-sizing: border-box;
    }

    .week-nav-button {
        padding: 8px 12px;
        margin: 0 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f8f8;
        cursor: pointer;
        font-size: 16px;
    }

        .week-nav-button:hover {
            background-color: #e0e0e0;
        }

    .week-range {
        font-size: 16px;
        margin-left: 10px;
        color: #666;
    }
</style>

<div class="card">
    <img src="~/Image/飲食分析icon.png" alt="飲食分析icon" class="menu-icon">
    <h2 class="page-title">飲食分析</h2>
</div>
<div class="card-little">
    <img src="~/Image/每日熱量趨勢icon.png" alt="icon" class="menu-icon">
    <h2 class="page-title">每日熱量趨勢</h2>
</div>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "每日熱量趨勢";

    var weekData = ViewBag.WeekData as Dictionary<string, string>;
    var selectedDate = ViewBag.SelectedDate as string ?? DateTime.Now.ToString("yyyy-MM-dd");
    var dates = ViewBag.Dates as string[];
    var calories = ViewBag.Calories as int[];
    var startDate = DateTime.Parse(selectedDate).AddDays(-6).ToString("yyyy/MM/dd");
    var endDate = DateTime.Parse(selectedDate).ToString("yyyy/MM/dd");
}

<!-- 主內容區 -->
<div style="display: flex; height: 70vh;">
    <!-- 左半：折線圖 -->
    <div style="flex: 1; padding: 30px; display: flex; flex-direction: column; align-items: flex-start;">
        <div style="display: flex; align-items: center; justify-content: center; flex: 1; width: 100%; max-width: calc(50vw - 60px);">
            <canvas id="calorieLineChart" style="max-width: 100%; max-height: 100%;"></canvas>
        </div>
    </div>

    <!-- 右半：選單與七天紀錄 -->
    <div style="flex: 1; padding: 30px;">
        <!-- 頁面跳轉選單 -->
        <div style="margin-bottom: 20px;">
            <select id="pageSelect" style="width: 450px;">
                <option value="">--- 請選擇頁面 ---</option>
                <option value="@Url.Action("Analysis1Index", "Home")" data-icon="@Url.Content("~/Image/一周飲食統計icon.png")">一周飲食統計</option>
                <option value="@Url.Action("Analysis2Index", "Home")" data-icon="@Url.Content("~/Image/每日熱量趨勢icon.png")" selected>每日熱量趨勢</option>
                <option value="@Url.Action("Analysis3Index", "Home")" data-icon="@Url.Content("~/Image/營養比例分析icon.png")">營養比例分析</option>
            </select>
        </div>

        <!-- 日期選擇與週切換 -->
        <div style="margin-bottom: 20px; display: flex; align-items: center;">
            <button id="prevWeek" class="week-nav-button">上一週</button>
            <label>選擇日期：</label>
            <input type="date" id="analysisDate" value="@selectedDate" style="margin: 0 10px;" />
            <button id="nextWeek" class="week-nav-button">下一週</button>
            <span class="week-range">@startDate - @endDate</span>
        </div>

        <!-- 七天記錄 -->
        <h3>近七天餐點記錄</h3>
        <ul style="font-size: 18px; list-style: none; padding-left: 0;">
            @if (weekData != null && weekData.Count > 0)
            {
                foreach (var item in weekData)
                {
                    <li>@item.Key : @item.Value</li>
                }
            }
            else
            {
                <li>尚無資料</li>
            }
        </ul>
    </div>
</div>

<!-- JS 區域 -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(document).ready(function () {
        function formatOption(option) {
            if (!option.id) return option.text;
            var iconUrl = $(option.element).data('icon');
            if (!iconUrl) return option.text;
            return $('<span><img src="' + iconUrl + '" style="height:30px; width:30px; margin-right:10px;">' + option.text + '</span>');
        }

        $('#pageSelect').select2({
            width: 'style',
            templateResult: formatOption,
            templateSelection: formatOption
        });

        // 頁面跳轉
        $('#pageSelect').on('change', function () {
            var url = $(this).val();
            if (url) window.location.href = url;
        });

        // 日期選擇跳轉
        $('#analysisDate').on('change', function () {
            var newDate = $(this).val();
            if (newDate) {
                window.location.href = '/Home/Analysis2Index?selectedDate=' + newDate;
            }
        });

        // 上一週/下一週按鈕
        $('#prevWeek').on('click', function () {
            var currentDate = new Date('@selectedDate');
            currentDate.setDate(currentDate.getDate() - 7);
            var newDate = currentDate.toISOString().split('T')[0];
            window.location.href = '/Home/Analysis2Index?selectedDate=' + newDate;
        });

        $('#nextWeek').on('click', function () {
            var currentDate = new Date('@selectedDate');
            currentDate.setDate(currentDate.getDate() + 7);
            var newDate = currentDate.toISOString().split('T')[0];
            window.location.href = '/Home/Analysis2Index?selectedDate=' + newDate;
        });
    });

    // 折線圖資料
    var labels = @Html.Raw(Json.Encode(dates));
    var data = @Html.Raw(Json.Encode(calories));

    var ctx = document.getElementById('calorieLineChart').getContext('2d');
    var calorieLineChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: '每日熱量 (kcal)',
                data: data,
                fill: false,
                borderColor: 'rgba(75, 192, 192, 1)',
                backgroundColor: 'rgba(75, 192, 192, 0.3)',
                tension: 0.3,
                borderWidth: 3,
                pointRadius: 6,
                pointBackgroundColor: 'rgba(255, 99, 132, 1)'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top'
                },
                title: {
                    display: true,
                    text: '近七天每日攝取熱量折線圖'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: '熱量 (kcal)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: '日期'
                    }
                }
            }
        }
    });
</script>